/* pages/music/music.wxss */
.h1{
	display: flex;
	justify-content: center;
	width: 750rpx;
	height: 70rpx;
	font-size: 50rpx;
	margin-top: 20rpx;
}
.h1-2{
	margin-top: 5rpx;
	text-align: center
}
.h1 > image{
	width: 70rpx;
	height: 70rpx;
	margin-right: 10rpx;
	margin-left: 10rpx;
	
}
.newsong_row{
  padding: 3%;
  height:40rpx;
  line-height: 40rpx;
  display: flex;
  justify-content: space-between;
	margin: auto 20rpx;
	border-bottom: 2rpx solid #ccc;
}
.song{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

