/* 3.底部 */

.player {
	width: 600rpx;
  height: 112rpx;
	position: fixed;
	left: 75rpx;
	bottom: 0rpx;
  background-color: #343636;
  border: 1rpx solid #252525;
  display: flex;
  align-items: center;
}

.player image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 15rpx;
}

.player-cover {
  margin-left: 15rpx;
  /* border-radius: 50rpx; */
  border: 1px solid #333;
}

.player-info {
  margin-left: 20rpx;
  padding-bottom: 5rpx;
  flex: 1;
}
.player-info-songName{
	color: rgb(255, 255, 255);
}
.player-info-singer {
  color: #888;
}
